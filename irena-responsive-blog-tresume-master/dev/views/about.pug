include ./shared/mixins.jade

block title
  title irena|| irena popova - about
block content
 div.home-banner
   div
     ul.bxslider-subpages
       +slider_item('user','About Me','#298bc3')
 section.section-about
   div.container
     h3.main-title Who I am
     div.about-shell
       div.profile-part
