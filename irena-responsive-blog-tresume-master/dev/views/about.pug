           img(src='https://placeholdit.imgix.net/~text?txtsize=33&bg=1a354e&txt=Hello%20I%20am%20a%20profile%20picture%20&w=300&h=300', alt='My Profile Picture')
         div.profile-detail-shell
           h3 Irena Popova
           +work_experience_item('Front-end Developer', 'March 2016 - present')
           +work_experience_item('Full Stack Developer', 'September 2017 - March 2018')
           h4.irena-icon-location Lives in Berlin, Germany
           +study_item('Studied Computer Science at Software University,Sofia','Attended from 2016 to 2017')
           +study_item('Linguistics at Neophit Rilski University','Attended from 1993 to 1998')
